<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol>
    <% postList.results.forEach(function(post) {%>
        <li>
            <img src = <%= post.imageUrl %> alt = "an image"  width =200 >
                       
            <h2><%= post.message %> </h2> - <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %>
            <p> 
                <h3>Author's name: <%= post.postedBy.name %></h3>
                <p>
                    Likes: <%=post.likedBy.length %>
                </p>
                <form method="post" action="/users/create">
                    
                    <button type="submit">üëç </button><%=post.likedBy.length %>
                </form>
                <form method="post" action="/users/create">
                    
                    <button type="submit">üëé </button><%= post.dislikedBy.length %>
                </form>                    
                        
                
                
            </p>
            
          
            
            
        </li>
    <% }); %>
</ol>

<%if (postList.next) { %>
    <a href="<%= postList.next %>">Next</a>
<% } %>
<%if (postList.previous) { %>
    <a href="<%= postList.previous %>">Previous</a>
<% } %>

</body>
<%- include('_footer') -%>
</html>