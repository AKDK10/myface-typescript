<html lang="en-gb">
<%- include('_head') -%>
<%- include('_header') -%>
<body>
<h1>Posts</h1>
<ol>
    <% postList.results.forEach(function(post) {%>
        <li>
            <img src = <%= post.imageUrl %> width =200 >
            <p> 
                Author's name: <%= post.postedBy.name %>
            </p>
            
            <%= post.message %> - <%= format(post.createdAt, "yyyy-MM-dd HH:mm:ss") %>
            <p> 
               Likes: <% post.likedBy.forEach(function(like) {%> 
                <li>
                    <%= like.username%>
                </li>
                <% });  %>
            </p>
            
        </li>
    <% }); %>
</ol>
</body>
<%- include('_footer') -%>
</html>